[target.aarch64-apple-darwin]
rustflags = ["-C", "target-cpu=native", "-Z", "tune-cpu=native", "-Z", "strip=symbols", "-Z", "unstable-options"]

[target.x86_64-apple-darwin]
rustflags = ["-C", "target-cpu=native", "-Z", "tune-cpu=native", "-Z", "strip=symbols", "-Z", "unstable-options"]

[target.x86_64-pc-windows-gnu]
